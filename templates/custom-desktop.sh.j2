#!/bin/bash
#
# xfconf-query -c <channel> -lv
# xfconf-query -c <channel> -p <property> -s <value>

## Settings for channel: xsettings
xfconf-query -c xsettings -p /Net/ThemeName -s '{{ xbc_desktop_theme  }}'
xfconf-query -c xsettings -p /Net/IconThemeName -s '{{ xbc_desktop_icon_theme }}'
xfconf-query -c xsettings -p /Gtk/FontName -s '{{ xbc_desktop_font }}'

## Settings for channel: xfce4-panel
#xfconf-query -c xfce4-panel -p /panels/panel-0/position -s '{{ xbc_desktop_panel_position }}'
xfconf-query -c xfce4-panel -p /panels/panel-0/size -s '{{ xbc_desktop_panel_size }}'
xfconf-query -c xfce4-panel -p /panels/panel-0/background-alpha -s '{{ xbc_desktop_panel_bg_alpha }}'
xfconf-query -c xfce4-panel -p /panels/panel-0/position -s '{{ xbc_desktop_panel_position }}'
xfconf-query -c xfce4-panel -p /plugins/plugin-11/digital-format -s '{{ xbc_desktop_8_digital_format }}'
cp -f /etc/xdg/xdg-xubuntu/xfce4/whiskermenu/defaults.rc ~/.config/xfce4/panel/whiskermenu-1.rc

## Settings for channel: xfwm3
xfconf-query -c xfwm4 -p /general/theme -s '{{ xbc_desktop_xfwm4_theme }}'
xfconf-query -c xfwm4 -p /general/title_font -s '{{ xbc_desktop_xfwm4_title_font }}'
xfconf-query -c xfwm4 -p /general/borderless_maximize -s '{{ xbc_desktop_xfwm4_borderless_maximize | lower }}'

## Settings for channel: xfce4-desktop
xfconf-query -c xfce4-desktop -p /backdrop/screen0/monitor0/image-path -s '/opt/ansible/system/desktop/images/{{ xbc_desktop_name }}'
xfconf-query -c xfce4-desktop -p /backdrop/screen0/monitor0/workspace0/last-image -s '/opt/ansible/system/desktop/images/{{ xbc_desktop_name }}'
xfconf-query -c xfce4-desktop -p /backdrop/screen0/monitor1/image-path -s '/opt/ansible/system/desktop/images/{{ xbc_desktop_name }}'
xfconf-query -c xfce4-desktop -p /backdrop/screen0/monitor0/image-style -s '{{ xbc_desktop_xfwm4_image_style }}'


xfconf-query -c xfce4-desktop -p /desktop-icons/file-icons/show-filesystem -s '{{ xbc_desktop_show_filesystem | lower }}'
xfconf-query -c xfce4-desktop -p /desktop-icons/file-icons/show-home -s '{{ xbc_desktop_show_home | lower }}'
xfconf-query -c xfce4-desktop -p /desktop-icons/file-icons/show-removable -s '{{ xbc_desktop_show_removable | lower }}'
xfconf-query -c xfce4-desktop -p /desktop-icons/file-icons/show-trash -s '{{ xbc_desktop_show_trash | lower }}'
xfconf-query -c xfce4-desktop -p /desktop-icons/icon-size -s '{{ xbc_desktop_icon_size | lower }}'

## Settings for channel: xettings
xfconf-query -c xsettings -p /Gtk/CursorThemeName -s '{{ xbc_cursor_theme_name }}'
xfconf-query -c xsettings -p /Gtk/CursorThemeSize -s '{{ xbc_cursor_size }}'

## Settings for channel: xfce4-session (hide Suspend/Hibernate)
xfconf-query -c xfce4-session -np '/shutdown/ShowSuspend' -t 'bool' -s '{{ xbc_kiosk_show_suspend | lower }}'
xfconf-query -c xfce4-session -np '/shutdown/ShowHibernate' -t 'bool' -s '{{ xbc_kiosk_show_hibernate | lower }}'
